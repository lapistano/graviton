<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <parameters>
    <parameter key="graviton.person.controller.consultant.class">Graviton\PersonBundle\Controller\ConsultantController</parameter>
    <parameter key="graviton.person.repository.consultant.class">Graviton\PersonBundle\Repository\ConsultantRepository</parameter>
    <parameter key="graviton.person.model.consultant.class">Graviton\PersonBundle\Model\Consultant</parameter>
    <parameter key="graviton.person.document.consultant.class">Graviton\PersonBundle\Document\Consultant</parameter>
    <parameter key="graviton.person.repository.personcontact.class">Graviton\PersonBundle\Repository\PersonContactRepository</parameter>
    <parameter key="graviton.person.model.personcontact.class">Graviton\PersonBundle\Model\PersonContact</parameter>
    <parameter key="graviton.person.document.personcontact.class">Graviton\PersonBundle\Document\PersonContact</parameter>
    <parameter key="graviton.person.document.personconsultant.class">Graviton\PersonBundle\Document\PersonConsultant</parameter>
    <parameter key="graviton.person.repository.personconsultant.class">Graviton\PersonBundle\Repository\PersonConsultant</parameter>
    <parameter key="graviton.person.model.personconsultant.class">Graviton\PersonBundle\Model\PersonConsultant</parameter>
    <parameter key="graviton.person.document.customer.class">Graviton\PersonBundle\Document\Customer</parameter>
    <parameter key="graviton.person.repository.customer.class">Graviton\PersonBundle\Repository\Customer</parameter>
    <parameter key="graviton.person.model.customer.class">Graviton\PersonBundle\Model\Customer</parameter>
    <parameter key="graviton.person.controller.customer.class">Graviton\PersonBundle\Controller\CustomerController</parameter>
  </parameters>
  <services>
    <service id="graviton.person.controller.consultant" class="%graviton.person.controller.consultant.class%" parent="graviton.rest.controller" scope="request">
      <call method="setModel">
        <argument type="service" id="graviton.person.model.consultant"/>
      </call>
      <tag name="graviton.rest" read-only="true"/>
    </service>
    <service id="graviton.person.repository.consultant" class="%graviton.person.repository.consultant.class%" factory-service="doctrine_mongodb.odm.default_document_manager" factory-method="getRepository">
      <argument type="string">GravitonPersonBundle:Consultant</argument>
    </service>
    <service id="graviton.person.model.consultant" class="%graviton.person.model.consultant.class%" parent="graviton.rest.model">
      <call method="setRepository">
        <argument type="service" id="graviton.person.repository.consultant"/>
      </call>
    </service>
    <service id="graviton.person.document.consultant" class="%graviton.person.document.consultant.class%"/>
    <service id="graviton.person.repository.personcontact" class="%graviton.person.repository.personcontact.class%" factory-service="doctrine_mongodb.odm.default_document_manager" factory-method="getRepository">
      <argument type="string">GravitonPersonBundle:PersonContact</argument>
    </service>
    <service id="graviton.person.model.personcontact" class="%graviton.person.model.personcontact.class%" parent="graviton.rest.model">
      <call method="setRepository">
        <argument type="service" id="graviton.person.repository.personcontact"/>
      </call>
    </service>
    <service id="graviton.person.document.personcontact" class="%graviton.person.document.personcontact.class%"/>
    <service id="graviton.person.document.personconsultant" class="%graviton.person.document.personconsultant.class%"/>
    <service id="graviton.person.repository.personconsultant" class="%graviton.person.repository.personconsultant.class%" factory-service="doctrine_mongodb.odm.default_document_manager" factory-method="getRepository">
      <argument type="string">GravitonPersonBundle:PersonConsultant</argument>
    </service>
    <service id="graviton.person.model.personconsultant" class="%graviton.person.model.personconsultant.class%" parent="graviton.rest.model">
      <call method="setRepository">
        <argument type="service" id="graviton.person.repository.personconsultant"/>
      </call>
    </service>
    <service id="graviton.person.document.customer" class="%graviton.person.document.customer.class%"/>
    <service id="graviton.person.repository.customer" class="%graviton.person.repository.customer.class%" factory-service="doctrine_mongodb.odm.default_document_manager" factory-method="getRepository">
      <argument type="string">GravitonPersonBundle:Customer</argument>
    </service>
    <service id="graviton.person.model.customer" class="%graviton.person.model.customer.class%" parent="graviton.rest.model">
      <call method="setRepository">
        <argument type="service" id="graviton.person.repository.customer"/>
      </call>
    </service>
    <service id="graviton.person.controller.customer" class="%graviton.person.controller.customer.class%" parent="graviton.rest.controller" scope="request">
      <call method="setModel">
        <argument type="service" id="graviton.person.model.customer"/>
      </call>
      <tag name="graviton.rest"/>
    </service>
  </services>
</container>
